{
	"exclude": ["node_modules", "dist"],
	"include": ["src/*.ts", "src/*.tsx"],
	"compilerOptions": {
		"lib": ["ES2022"],
		"isolatedModules": true,
		"esModuleInterop": true,
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,
		"target": "ES2022",
		"strict": true,
		"allowJs": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"]
		},
		"rootDir": "./src",
		"outDir": "./dist"
	}
}
